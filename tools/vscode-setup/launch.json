    "version": "0.2.0",
    "configurations": [
        {
            "name": "build and debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/godot.x11.opt.tools.64",
            "args": [
                "--path",
                "${workspaceFolder}/../game/"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/bin/"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            //"miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/godot.x11.opt.tools.64",
            //"args": ["-e"],
            "args": [
                "--path",
                "${workspaceFolder}/../game/",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/bin/"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            //"preLaunchTask": "build",
            //"miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}